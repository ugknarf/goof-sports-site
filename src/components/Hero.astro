---
import { Image } from 'astro:assets';
import heroImage from '../assets/hero.png';
---

<section class="relative pt-32 pb-20 px-6 overflow-hidden">
  <!-- Gradient background -->
  <div class="absolute inset-0 bg-gradient-to-b from-brand/10 via-transparent to-transparent pointer-events-none"></div>
  <div class="absolute top-20 left-1/2 -translate-x-1/2 w-[800px] h-[600px] bg-brand/20 rounded-full blur-[120px] pointer-events-none"></div>

  <div class="relative max-w-7xl mx-auto text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 bg-surface-light border border-white/10 rounded-full px-4 py-1.5 mb-8" data-animate="fade-up">
      <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
      <span class="text-sm text-text-secondary font-medium">Live odds across 6+ sportsbooks</span>
    </div>

    <!-- Headline -->
    <h1 class="font-heading font-800 text-5xl md:text-7xl lg:text-8xl leading-[1.05] tracking-tight mb-6" data-animate="fade-up">
      Sweat. Bet.<br />
      <span class="bg-gradient-to-r from-brand-light to-accent bg-clip-text text-transparent">Chat.</span>
    </h1>

    <!-- Subheadline -->
    <p class="text-lg md:text-xl text-text-secondary max-w-2xl mx-auto mb-10 leading-relaxed" data-animate="fade-up">
      Compare live odds, track your bets, and share the action with friends. One app for every game.
    </p>

    <!-- CTA buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16" data-animate="fade-up">
      <a
        href="#download"
        class="bg-brand hover:bg-brand-light text-white font-semibold px-8 py-4 rounded-full text-lg transition-all hover:scale-105 hover:shadow-lg hover:shadow-brand/25"
      >
        Download Free
      </a>
      <a
        href="#features"
        class="bg-surface-light hover:bg-surface-lighter text-text-primary font-semibold px-8 py-4 rounded-full text-lg border border-white/10 transition-all hover:scale-105"
      >
        See Features
      </a>
    </div>

    <!-- Phone mockup -->
    <div class="relative max-w-sm mx-auto" data-animate="fade-up">
      <Image
        src={heroImage}
        alt="Goof Sports app showing live BUF at KC game with odds comparison"
        class="w-full h-auto drop-shadow-2xl"
        widths={[400, 600, 800]}
        sizes="(max-width: 640px) 320px, 400px"
        loading="eager"
      />
      <!-- Glow under phone -->
      <div class="absolute -bottom-10 left-1/2 -translate-x-1/2 w-3/4 h-20 bg-brand/30 rounded-full blur-[40px]"></div>
    </div>
  </div>
</section>
